
<div class="container">
  <h3><%= @data.id.nil? ? "New Notice" : @data.id %></h3>
  <%= form_for( [:admin, @data], html: { multipart: true } ) do |f| %>
    <div class="form-group">
      <%= image_tag @data.avatar.url %>
      <%= f.file_field :avatar %>
      <label>Korean title</label>
      <%= f.text_area :ko_title, class: "form-control" %>
      <label>Korean content</label>
      <%= f.text_area :ko_content, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>English title</label>
      <%= f.text_area :en_title, class: "form-control" %>
      <label>English content</label>
      <%= f.text_area :en_content, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Chinese title</label>
      <%= f.text_area :cn_title, class: "form-control" %>
      <label>Chinese content</label>
      <%= f.text_area :cn_content, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Japanese title</label>
      <%= f.text_area :ja_title, class: "form-control" %>
      <label>Japanese content</label>
      <%= f.text_area :ja_content, class: "form-control" %>
    </div>
    
    <%= f.submit "Done", class: "btn btn-primary" %>
    <%= link_to "Back to list", admin_notices_path, class: "btn btn-warning" %>
  <% end %>

</div>