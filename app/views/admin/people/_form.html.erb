
<div class="container">
  <h3><%= @data.id.nil? ? "New Person" : @data.id %></h3>
  <%= form_for( [:admin, @data], html: { multipart: true } ) do |f| %>
    <div class="form-group">
      <%= image_tag @data.avatar.url %>
      <%= f.file_field :avatar %>
      <label>Korean name</label>
      <%= f.text_area :ko_name, class: "form-control" %>
      <label>Korean description</label>
      <%= f.text_area :ko_description, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>English name</label>
      <%= f.text_area :en_name, class: "form-control" %>
      <label>English description</label>
      <%= f.text_area :en_description, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Chinese name</label>
      <%= f.text_area :cn_name, class: "form-control" %>
      <label>Chinese description</label>
      <%= f.text_area :cn_description, class: "form-control" %>
    </div>
    
    <%= f.submit "Done", class: "btn btn-primary" %>
    <%= link_to "Back to list", admin_people_path, class: "btn btn-warning" %>
  <% end %>

</div>