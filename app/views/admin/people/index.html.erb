<div class="container">
  <span class="h3">People</span>
  <a href="<%= new_admin_person_path %>" class="btn btn-info">
    new person
  </a>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>avatar</th>
        <th>name</th>
        <th>description</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @data.each_with_index do |item, idx| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= image_tag item.avatar.url %></td>
        <td><%= item.ko_name %></td>
        <td><%= item.ko_description %></td>
        <td><a href="<%= edit_admin_person_path(item) %>" class="btn btn-default">Edit</a></td>
        <td><%= link_to 'Delete', admin_person_path(item), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure to delete?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>