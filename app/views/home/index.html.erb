</section>
        

<!-- People Grid Section -->
<section id="ref-people">
  <div class="container">
    <div class="row">
      <% @people.each do |item| %>
        <% if item[:type] == "dm" %>
        <% #### dummy %>
        <div class="col-xs-2 portfolio-item dummy" style="height:250px">
        </div>
        <% elsif item[:type] == "ov" %>
        <% #### overview %>
        <div class="col-xs-2 portfolio-item">
          <% if !item[:pos].nil? %>
          <div class="thumbnail-caption">
            <span style="white-space:nowrap"><%= item[:pos] %></span>
          </div>
          <% else %>
          <div style="height:38px"></div>
          <% end %>
          <a class="thumbnail portfolio-link" role="button" data-toggle="collapse" href="#<%=item[:id]%>" aria-expanded="false" data-opened="false">
            <div class="portfolio-hover">
              <div class="portfolio-hover-content">
                <%= item[:name] %>
              </div>
            </div>
            <%= image_tag(item[:url], class: "avatar img-responsive", style: "width:100%") %>
            <div class="expanded-name">
              <%= item[:name] %>
            </div>
          </a>
        </div>
        <% else # dc %>
        <% #### description %>
        <div class="col-xs-12 thumbnail-details collapse" id="<%=item[:id]%>">
          <%= item[:desc] %>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

        
<!-- News Section -->
<section id="ref-news" class="bg-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-xs-2 col-xs-offset-1">
        <span class="recruit">RECRUIT</span>
      </div>
      <div class="col-xs-9">
        <span class="recruit-text">
        <%= get_text(@texts, "recruit", @locale) %>
        </span>
      </div>
    </div>
    <div class="row" style="margin-top:50px;" id="news-expanded-panel">
      <% @notices.each_with_index do |item, index| %>
      <div class="has-transition op col-xs-12 hidden" id="expanded-news-<%=index%>">
        <div class="thumbnail thumbnail-news expanded" data-id="<%=index%>">
          <%= image_tag(item[:url], class: "news-img", style: "max-height:175px") %>
          <div class="caption">
            <h3><%= item[:title] %></h3>
            <p class="short">
              <%= item[:full] %>
            </p>
            <p class="clip">
            </p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="row" style="margin-top:0px;" id="news-panel">
      <% @notices.each_with_index do |item, index| %>
      <div class="has-transition op col-xs-3" id="news-<%=index%>">
        <div class="thumbnail thumbnail-news" data-id="<%=index%>">
          <%= image_tag(item[:url], class: "news-img fit", style: "max-height:175px") %>
          <div class="caption">
            <h3><%= item[:title] %></h3>
            <p class="short">
              <%= item[:full] %>
            </p>
            <p class="clip">
            </p>
          </div>
        </div>
      </div>
      <% end %>
   
    </div>
  </div>
</section>

