<!-- Header -->
<header>
  <div class="container">
    <div class="intro-text">
      <div class="intro-heading"><%= get_text(@texts, "welcome_text1", @locale) %></div>
      <div class="intro-lead-in"><%= get_text(@texts, "welcome_text2", @locale) %></div>
