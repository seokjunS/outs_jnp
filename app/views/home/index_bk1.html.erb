    </div>
  </div>
</header>

<div class="embed-responsive embed-responsive-16by9">
  <iframe class="embed-responsive-item" src="https://player.vimeo.com/video/172288767" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
</div>

<!-- About Us Section -->
<section id="ref-aboutus">
  <div class="container">
    <div class="row">
      <div class="col-xs-4">
        <%= image_tag("3.jpg", class: "img-responsive", style: "width:100%") %>
      </div>
      <div class="col-xs-6 col-xs-offset-1 text-center">
        <h1 class="aboutus-heading">About Us</h1>
        <hr class="trans">
        <p class="aboutus-text">
          <%= get_text(@texts, "aboutus_1_1", @locale) %>
        </p>
        <hr class="trans">
        <p class="aboutus-text2">
          <%= get_text(@texts, "aboutus_1_2", @locale) %>
        </p>
        <hr class="trans">
        <a href="#ref-aboutus-more" class="page-scroll btn btn-trans">Read more</a>
      </div>
    </div>
  </div>
</section>

<!-- About Us Section -->
<section id="ref-aboutus-more" style="padding-top:100px;">
  <div class="row aboutus-more-heading">
    <div class="container">
      <div class="col-xs-4 left">
        We provide quality.
        <br>BEST SERVICES.
      </div>
      <div class="col-xs-8 right">
        <%= get_text(@texts, "aboutus_2_1", @locale) %>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row aboutus-item-panel">
      <% @abouts1.each_with_index do |item, index| %>
      <div class="col-xs-3 divided-item <%= index == 4 ? 'last' : '' %>">
        <div class="aboutus-item">
          <h3 class="heading"><%= item.get_title(@locale) %></h3>
          <p class="content">
            <%= item.get_content(@locale) %>
          </p>
        </div>
      </div>
      <% end %>      

    </div>
  </div>
</section>


<section id="ref-aboutus-more2" class="bg-light-gray" style="padding-top:100px;">
  <div class="container">
    <div class="aboutus-more2-heading">
      <%= get_text(@texts, "aboutus_3_1", @locale) %>
    </div>

    <div class="row content-panel">
      <div class="col-md-5">
        <%= image_tag("1.jpg", class: "", style: "width:100%") %>
      </div>
      <div class="col-md-7" style="position:relative;padding:0">
        <% @abouts2.each_with_index do |item, index| %>
        <div class="col-xs-6 item <%= index == 0 ? 'first' : (index == 3 ? 'last' : '') %>">
          <div class="col-xs-6 icon">
            <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
            <div class="lb"><%= item.get_title(@locale) %></div>
          </div>
          <div class="col-xs-6 text">
            <%= item.get_content(@locale) %>
          </div>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</section>
        

<!-- People Grid Section -->
<section id="ref-people">
  <div class="container">
    <div class="row">
      <div class="col-xs-4 ">
        <div class="thumbnail big">
          <%= image_tag(@people.first.avatar.url, class: "avatar img-responsive", style: "width:100%") %>
          <div class="caption">
            <h3><%= @people.first.get_name(@locale) %></h3>
            <p><%= @people.first.get_description(@locale) %></p>
          </div>
        </div>
      </div>
      <div class="col-xs-7 col-xs-offset-1">
        <div class="row">
          <% @people.each_with_index do |item, index| %>
          <% if index > 0 %>
          <div class="col-xs-4 portfolio-item">
            <div class="thumbnail portfolio-link">
              <div class="portfolio-hover">
                <div class="portfolio-hover-content">
                  <%= item.get_description(@locale) %>
                </div>
              </div>
              <%= image_tag(item.avatar.url, class: "avatar img-responsive", style: "width:100%") %>
              <div class="caption">
                <h3><%= item.get_name(@locale) %></h3>
              </div>
            </div>
          </div>
          <% end %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</section>
        
<!-- News Section -->
<section id="ref-news" class="bg-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-xs-2 col-xs-offset-1">
        <span class="recruit">RECRUIT</span>
      </div>
      <div class="col-xs-9">
        <span class="recruit-text">
        <%= get_text(@texts, "recruit", @locale) %>
        </span>
      </div>
    </div>
    <div class="row" style="margin-top:50px;">
      <% @notices.each_with_index do |item, index| %>
      <div class="col-xs-3">
        <div class="thumbnail thumbnail-news">
          <%= image_tag(item.avatar.url, class: "img-responsive", style: "width:100%") %>
          <div class="caption">
            <h3><%= item.get_title(@locale) %></h3>
            <p>
              <%= item.get_content(@locale) %>
            </p>
          </div>
        </div>
      </div>
      <% end %>
   
    </div>
  </div>
</section>

<!-- Location Section -->
<section id="ref-location">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="row">
          <div class="col-xs-3 location-label">
            ADDRESS
          </div>
          <div class="col-xs-9 location-text">
            <%= get_text(@texts, "address", @locale) %>
          </div>
        </div>
      </div>
      <div class="col-xs-3">
        <div class="row">
          <div class="col-xs-4 location-label">
            TEL.
          </div>
          <div class="col-xs-8 location-text">
            <%= get_text(@texts, "tel", @locale) %>
          </div>
        </div>
      </div>
      <div class="col-xs-3">
        <div class="row">
          <div class="col-xs-4 location-label">
            FAX.
          </div>
          <div class="col-xs-8 location-text">
            <%= get_text(@texts, "fax", @locale) %>
          </div>
        </div>
      </div>
    </div>
    <div class="row" style="margin-top:40px">
      <%= link_to image_tag("map.png", class: "img-responsive", style: "width:100%"), "http://map.naver.com/local/siteview.nhn?code=33299951", target: "_blank" %>
    </div>
  </div>

</section>


<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <span class="lb">ADD</span> <%= get_text(@texts, "address", @locale) %>
        <br>
        <span class="lb">TEL</span> <%= get_text(@texts, "tel", @locale) %>
        <span class="lb">FAX</span> <%= get_text(@texts, "fax", @locale) %>
        <span class="lb">All rights reserved &copy; J&PATNERS</span>
      </div>

  </div>
</footer>

          
